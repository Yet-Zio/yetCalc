<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/nointernetcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/web_off"
            app:tint="?attr/darkViewArrowColor" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Whoops!"
            android:gravity="center"
            android:textSize="30sp"
            android:textFontWeight="600"
            android:fontFamily="@font/nunitosans"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/nointTitle"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/nunitosans"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/tryAgainIntBt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            style="@style/TryAgainIntButton"
            android:layout_gravity="center"
            android:textFontWeight="600"
            android:layout_marginTop="50dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/nointInfoText"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/nunitosans"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>